							<p>
								A</p>
							<p>
								A</p>
							<p>
								A</p>
							<p>
								A</p>
						</aside>
						<article class="skip">
							<a href="#principale" class="flex intertitre">
								<h2 class "flex inter">{{index.intertitre}}</h2>
							</a>
						</article>
						<div id="principale" class="flex"></div>
						<article class="flex artpres">
							<div class"flex mainpres">
								<div class="moi flex">
									<img class="flex imgPres" src="image/test.jpg" alt="">
									<div class="info flex">
										<div class="iteminfo">
											<h3 class="apropos">{{index.nom}}</h3>
											<h4 class="apropos">{{index.date}}</h4>
											<h5 class="apropos">{{index.intitule}}</h5>
										</div>
									</div>
								</div>

								<div class="presentation flex">
									<div class="pres1 flex">
										<img src="image/dejavu.png">
										<p>{{index.quisuisje}}</p>
									</div>
									<div class="pres1 flex">
										<img src="image/dejavu.png">
										<p>{{index.quesque}}</p>
									</div>
									<div class="pres1 flex">
										<img src="image/dejavu.png">
										<p>{{index.shamelessPlug}}</p>
									</div>
								</div>
							</div>
						</article>
					</section>
				</main>
			</body>
		</main>
	{% endblock body %}
